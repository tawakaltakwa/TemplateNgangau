<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.TemplateNgangau" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Text -->
        <item name="android:textSize">16sp</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black2</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>

        <!-- bg -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:colorForeground">@color/abugelap</item>
        <item name="colorAccent">@color/hejo2</item>

        <!-- lain -->
        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    </style>

    <!-- Drawer -->
    <style name="Widget.Custom.NavigationView.Hejo" parent="Widget.Design.NavigationView">
